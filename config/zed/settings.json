  "buffer_font_family": "CaskaydiaCove Nerd Font Mono",
  "ssh_connections": [
    {
      "host": "pdudko.me",
      "args": [],
      "projects": [
        {
          "paths": ["/root"]
        },
        {
          "paths": ["/root/dst"]
        },
        {
          "paths": ["/root/liburing"]
        },
        {
          "paths": ["/root/pd"]
        },
        {
          "paths": ["/root/rust_debugger_example"]
        },
        {
          "paths": ["/root/static-files-server"]
        },
        {
          "paths": ["/root/zigio"]
        },
        {
          "paths": ["/root/zuring"]
        },
        {
          "paths": ["/snap/zig/14333/lib/std"]
        }
      ]
    }
  ],
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Dark Soft",
    "dark": "Base16 Everforest Dark Hard"
  },
  "helix_mode": true,
  "terminal": { "dock": "right", "font_family": "CaskaydiaCove Nerd Font" },
  "debugger": { "dock": "right" }
